<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/circle_brood_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffd4d9da"
        app:loading_renderer="CircleBroodLoadingRenderer" />

    <app.dinus.com.loadingdrawable.LoadingView
        android:id="@+id/cool_wait_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ff1B78DD"
        app:loading_renderer="CoolWaitLoadingRenderer" />

</LinearLayout>